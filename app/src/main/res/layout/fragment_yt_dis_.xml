<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pjt.xianyu.YT_dis_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <com.pjt.xianyu.ReFlashListView
        android:id="@+id/yutang_dis_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView35"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yutang_rollviewpager"
        android:background="#66dadada" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView35"
        android:padding="10dp"
        android:id="@+id/relativeLayout8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/imageView16"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/card_title_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="附近的社区"
            android:id="@+id/textView36"
            android:layout_toRightOf="@+id/imageView16"
            android:layout_toEndOf="@+id/imageView16"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imageView16"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout7"
            android:layout_alignBottom="@+id/textView36"
            android:layout_alignParentTop="true"
            android:gravity="center"
            >

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/button"
                android:background="@drawable/refresh_location"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout7"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/relativeLayout7"
            android:gravity="center"
            android:text="东北大学浑南校区"
            android:textSize="12sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout9"
        android:layout_below="@+id/btn_tuijian2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="更多"
            android:id="@+id/textView54"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/textView53"
            android:background="#dadada"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/relativeLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_tuijian1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_fujin1"
            android:src="@drawable/head5"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/name_tuijian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_fujin1"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_fujin1"
            android:layout_toRightOf="@+id/img_fujin1"
            android:text="东北大学"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布数"
            android:id="@+id/textView41"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/img_fujin1"
            android:layout_alignLeft="@+id/name_tuijian1"
            android:layout_alignStart="@+id/name_tuijian1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5539"
            android:id="@+id/postcount_tuijian1"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView41"
            android:layout_toRightOf="@+id/textView41"
            android:layout_toEndOf="@+id/textView41"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气"
            android:id="@+id/textView43"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/img_fujin1"
            android:layout_toRightOf="@+id/postcount_tuijian1"
            android:layout_toEndOf="@+id/postcount_tuijian1"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50539"
            android:id="@+id/pop_tuijian1"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView43"
            android:layout_toRightOf="@+id/textView43"
            android:layout_toEndOf="@+id/textView43"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 m"
            android:id="@+id/juli_tuijian1"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/btn_tuijian2"
        android:layout_below="@+id/btn_tuijian1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_tuijian2"
            android:src="@drawable/fujin2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布数"
            android:id="@+id/textView48"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/img_tuijian2"
            android:layout_alignLeft="@+id/name_tuijian2"
            android:layout_alignStart="@+id/name_tuijian2"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/name_tuijian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_tuijian2"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_tuijian2"
            android:layout_toRightOf="@+id/img_tuijian2"
            android:text="沈阳体育学院"
            android:textAppearance="?android:attr/textAppearanceLarge"

            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="525"
            android:id="@+id/postcount_tuijian2"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView48"
            android:layout_toRightOf="@+id/textView48"
            android:layout_toEndOf="@+id/textView48"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气"
            android:id="@+id/textView50"
            android:textColor="#000000"
            android:layout_alignTop="@+id/postcount_tuijian2"
            android:layout_toRightOf="@+id/postcount_tuijian2"
            android:layout_toEndOf="@+id/postcount_tuijian2"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5390"
            android:id="@+id/pop_tuijian2"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/img_tuijian2"
            android:layout_toRightOf="@+id/textView50"
            android:layout_toEndOf="@+id/textView50"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 km"
            android:id="@+id/juli_tuijian2"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/textView46"
            android:background="#dadada"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
